<% content_for :main do %>

  <div class="grid">
    <% venues.each do |venue| %>

      <a href="/venues/<%= venue["id"] %>">
        <div style="background-image: url(<%= venue["background"] %>)"
             class="thumb">
          <div class="clearfix"></div>

          <p class="ven_name"><%= venue["name"] %></p>
             </div>
      </a>
    <% end %>
  </div>

<% end %>

<% content_for :nav do %>
  <div id="nav">
    <ul>
      <li>
        Events
      </li>
      <li>
        Bands
      </li>
      <li id="nav_ven">
        <a href="/venues">Venues</a>
      </li>
    </ul>
  </div>
<% end %>