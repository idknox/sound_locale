<% content_for :loggedout do %>
  <div class="nav_left">
    <form method="post" action="/">
      <input type="text" name="email" class="field" id="email" placeholder="email"/>

      <div id="bottom">
        <input type="password" name="password" class="field"
               id="password" placeholder="password"/>
        <button type="submit" class="button">Sign In</button>
      </div>
    </form>
  </div>
  <div class="nav_right">
    <div id="reg">Not a member?<a href="/register" id="reg_button"> Register</a>
    </div>
    <div id="rem">
      <% if flash[:notice] %>
        <%= flash[:notice] %>
      <% else %>
        <input type="checkbox" value="remem" id="rem"/>
        <label for="rem">Remember me</label></div>
      <% end %>
      </div>
<% end %>

<% content_for :loggedin do %>

  <div class="nav_left">
    Welcome, <%= cur_user %>
    <br>
    <a href="/pw" class="button" id="change">Change Password</a>
    <br>
    <a href="/logout" class="button">Logout</a>
  </div>
<% end %>

<% content_for :main do %>
  <div id="map_container">
  </div>
<% end %>